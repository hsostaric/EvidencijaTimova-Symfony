{% extends 'base.html.twig' %}
{% block title %}
Potvrda registracije
{% endblock %}
{% block body %}
    <form class="form-signin" method="post">

        <h1 class="h3 mb-3 font-weight-normal">Unesite podatke</h1>
        <label for="username" class="sr-only">Email address</label>
        <input type="text" name="username" id="username" class="form-control" placeholder="Vaše korisničko ime" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="text" name="potvrdniKod" id="potvrdniKod" class="form-control" placeholder="Unesite vaš kod" required>


        <button class="btn btn-lg btn-primary btn-block" type="submit">
            Pošalji
        </button>
    </form>
    {% if errors %}
        {% for greska in errors %}
            <p>{{ greska }}</p><br>
        {% endfor %}
    {% endif %}
{% endblock %}
