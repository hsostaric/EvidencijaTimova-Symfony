{% extends 'base.html.twig' %}

{% block title %}Prijava{% endblock %}

{% block body %}
    {% if errors %}
        <div>{{ errors.messageKey|trans(errors.messageData, 'security') }}</div>
    {% endif %}
<form method="post" style="margin: 0 auto;width: 70%">


    <h1 class="h3 mb-3 font-weight-normal">Unesite va≈°e podatke za prijavu</h1>
    <label for="inputUsername" class="sr-only">Username</label>
    <input type="text" value="{{ lastLogin }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control"  placeholder="Password" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >



    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
