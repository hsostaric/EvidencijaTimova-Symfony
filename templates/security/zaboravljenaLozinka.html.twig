{% extends 'base.html.twig' %}
{% block body%}
<form class="form-signin" method="post">

    <h1 class="h3 mb-3 font-weight-normal">Unesite podatke</h1>
    <label for="username" class="sr-only">Username</label>
    <input type="text" name="username" id="username" class="form-control" placeholder="Vaše korisničko ime" required autofocus>
    <button class="btn btn-lg btn-primary btn-block" type="submit">
        Pošalji
    </button>
</form>
{% if errors %}
    {% for greska in errors %}
        <p>{{ greska }}</p><br>
    {% endfor %}
{% endif %}
{% endblock %}
